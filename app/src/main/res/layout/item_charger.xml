<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charger ID : "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/chargerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charger ID"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Address : "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charger Type : "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/chargerType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charger Type"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Model : "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/brandModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Model"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power Rating : "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/powerRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power Rating"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connector Type : "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/connectorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connector Type"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability : "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Per Unit : "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/pricePerUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Per Unit"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/ownershipProofButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Ownership Proof"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/installationCertificateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Installation Certificate"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter comment here"
        android:minHeight="10dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/approveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Approve"
            android:textColor="#00FF00"/>

        <Button
            android:id="@+id/rejectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reject"
            android:textColor="#FF0000"/>
    </LinearLayout>
</LinearLayout>